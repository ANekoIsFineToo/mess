{% extends 'base.html.twig' %}

{% set route = app.request.get('_route') %}

{% block body %}
    <header class="container mt-5 app-header">
        <div class="text-center h1">
            <nav class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMainMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ block('title') }}
                </button>

                <div class="dropdown-menu" aria-labelledby="dropdownMainMenu">
                    <a class="dropdown-item{{ routeActive('user_home') ? ' active' }}" href="{{ path('user_home_index') }}">
                        Inicio
                    </a>
                    <a class="dropdown-item{{ routeActive('user_profile_index') ? ' active' }}" href="{{ path('user_profile_index') }}">
                        {{ app.user.username }}
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('auth_logout') }}">Cerrar sesi√≥n</a>
                </div>
            </nav>

            <span class="app-name">/ Mess</span>
        </div>
    </header>
    
    <main class="container-fluid mt-5">
        {% block content %}{% endblock %}
    </main>
{% endblock %}

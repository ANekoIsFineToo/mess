{% extends 'auth/auth.html.twig' %}

{% block title %}Registrarse / Mess{% endblock %}
{% block auth_title %}Registrarse / Mess{% endblock %}

{% block auth_form %}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.avatar) }}
        {{ form_row(registrationForm.public) }}

        <button type="submit" class="btn btn-primary btn-block">¡Registrarse!</button>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block auth_switch %}
    <p>
        ¿Ya tienes una cuenta?
        <a href="{{ path('auth_login') }}">Iniciar Sesión</a>
    </p>
{% endblock %}

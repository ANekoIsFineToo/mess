{% for foundUser in foundUsers %}
    <div class="friend-entry d-flex align-items-center">
        <img src="{{ avatarUrl(foundUser.avatar) }}" class="rounded profile-avatar" alt="{{ foundUser.username|e }}">
        <div class="flex-fill ml-3">
            <h5>{{ foundUser.username|e }}</h5>
            <small class="d-block">Perfil {{ foundUser.public ? 'p√∫blico' : 'privado' }}</small>
            <small class="d-none text-success add-friend-success">Solicitud de amistad enviada</small>
        </div>
        <form action="{{ path('user_profile_friend_add') }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('add-friend') }}">
            <input type="hidden" name="uuid" value="{{ foundUser.uuid }}">

            <button type="submit"
                    class="btn p-0 add-friend-button"
                    data-toggle="tooltip"
                    data-placement="right"
                    title="Enviar solicitud de amistad">
                <i data-feather="plus-square"></i>
            </button>
        </form>
    </div>
{% endfor %}
